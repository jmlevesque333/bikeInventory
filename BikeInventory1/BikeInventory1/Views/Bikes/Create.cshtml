@model BikeInventory1.Models.Bike

@{
    ViewData["Title"] = "Create";
    List<SelectListItem> list = new List<SelectListItem>();
    SelectListItem item1 = new SelectListItem() { Text = "Mountain" , Value = "Mountain", Selected = true  };
    SelectListItem item2 = new SelectListItem() { Text = "Street"   , Value = "Street", Selected = false };
    SelectListItem item3 = new SelectListItem() { Text = "Speed"    , Value = "Speed", Selected = false };
    list.Add(item1);
    list.Add(item2);
    list.Add(item3);
}

<h2>Create Listing</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qty" class="control-label"></label>
                <input asp-for="Qty" class="form-control" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.BikeType)
                @Html.DropDownListFor(model => model.BikeType, list, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BikeType, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
